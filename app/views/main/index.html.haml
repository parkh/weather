- if current_user
  .row
    .span6.offset3
      = form_tag sources_search_path, method: "get", class: 'form-inline' do
        = label_tag :search, "Погода в:"
        = text_field_tag :search, params[:search], placeholder: "название города", class: "input-xlarge"
        = submit_tag "sinoptik", class: 'btn btn-primary'
        = submit_tag "meteo", class: 'btn btn-primary'

- if @cities != []
  %table.table.table-striped
    %thead
      %tr
        %th Погода
        %th сегодня
        %th завтра
        %th послезавтра
        %th через 3 дня
        %th через 4
        %th через 5
        %th через 6
    %tbody
      - @cities.each do |c|
        %tr
          %td= c.name
          = c.min_t.zip(c.max_t).map { |t| "<td>" + t.join(" .. ") + "</td>" }.join.html_safe