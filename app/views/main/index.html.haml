= flash[:notice]

= form_tag main_search_path, method: "get" do
  %p
  	= text_field_tag :search, params[:search]
  	= submit_tag "искать", name: nil
  end

#cities

%table
  %tr
  	%th город
    %th сегодня
    %th завтра
    %th послезавтра
    %th через 2 дня
    %th через 3
    %th через 4
    %th через 5
  @cities.each do |c|
    %tr
      %td= c.name
      = c.min_t.zip(c.max_t).map { |t| "<td>" + t.join(" — ") + "</td>" }.join.html_safe
  end